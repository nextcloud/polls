{
	"compilerOptions": {
		"allowJs": true,
		"lib": ["ES2022", "dom"],
		"allowImportingTsExtensions": true,
		"noEmit": true,
		"module": "esnext",
		"target": "es6",
		"moduleResolution": "Bundler",
		"types": ["node", "vite/client"],
		"strict": true,
		"noImplicitThis": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@components/*": ["src/components/*"],
			"@assets/*": ["src/assets/*"]
		}
	}
}
